<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/blackSemi"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/webcamImageView"
            android:layout_width="400dp"
            android:layout_height="224dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/a11y_map_content_description"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_image" />

        <ImageView
            android:id="@+id/buttonZoomPlus"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="6dp"
            android:background="@drawable/selector_blacksemi"
            android:src="@drawable/ic_zoom_in"
            card_view:layout_constraintBottom_toTopOf="@+id/buttonZoomMinus"
            card_view:layout_constraintEnd_toEndOf="@+id/buttonZoomMinus"
            card_view:layout_constraintStart_toStartOf="@+id/buttonZoomMinus"
            android:layout_marginBottom="2sp"/>

        <ImageView
            android:id="@+id/buttonZoomMinus"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:padding="6dp"
            android:src="@drawable/ic_zoom_out"
            card_view:layout_constraintBottom_toBottomOf="@id/webcamImageView"
            card_view:layout_constraintEnd_toEndOf="@id/webcamImageView"
            android:background="@drawable/selector_blacksemi"/>

        <TextView
            android:id="@+id/titleWebcam"
            style="@style/SubheadWhiteTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/webcamImageView"
            tools:text="text kjydiuf difkyilduyf  ">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>

