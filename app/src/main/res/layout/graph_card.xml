<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardGraph"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/blackSemi"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCelsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:text="°C"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toTopOf="@+id/my_graph"
            card_view:layout_constraintEnd_toStartOf="@+id/separator"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:text="|"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textViewCelsius"
            card_view:layout_constraintEnd_toStartOf="@+id/textViewFarenheit"
            card_view:layout_constraintTop_toTopOf="@+id/textViewCelsius" />

        <TextView
            android:id="@+id/textViewFarenheit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:minWidth="40dp"
            android:minHeight="40dp"
            android:text="°F"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/separator"
            card_view:layout_constraintEnd_toEndOf="@+id/my_graph"
            card_view:layout_constraintTop_toTopOf="@+id/separator" />


        <com.jjoe64.graphview.GraphView
            android:id="@+id/my_graph"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            card_view:layout_constraintBottom_toTopOf="@id/temperatureText"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/textViewCelsius" />

        <TextView
            android:id="@+id/temperatureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_graph"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Hour"
            android:textColor="@android:color/white"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/my_graph"
            card_view:layout_constraintTop_toBottomOf="@+id/my_graph" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

