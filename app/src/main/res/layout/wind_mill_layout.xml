<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/mill_height"
    tools:background="#ccc">

    <ImageView
        android:id="@+id/mill_leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mill_leg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/a11y_windmill_leg"/>

    <ImageView
        android:id="@+id/rotor_mill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rotor_mill"
        app:layout_constraintBottom_toTopOf="@+id/guideView"
        app:layout_constraintLeft_toLeftOf="@+id/mill_leg"
        app:layout_constraintRight_toRightOf="@+id/mill_leg"
        app:layout_constraintTop_toTopOf="@+id/guideView"
        android:contentDescription="@string/a11y_windmill_rotor"/>

    <View
        android:id="@+id/guideView"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@id/mill_leg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
